# Environment Configuration Example
# Copy this file to .env and fill in your values

# Database Configuration
# For local development (uses Docker container)
DATABASE_URL=postgresql://postgres:postgres@postgres:5432/repo_architect

# For production (use your Supabase/external database URL)
# DATABASE_URL=postgresql://username:password@host:port/database_name

# LLM Configuration
GEMINI_API_KEY=your_gemini_api_key_here
GEMINI_MODEL=gemini-1.5-flash

# Analysis Configuration
TOP_FILES=40
COMPONENT_COUNT=8
CHUNK_SIZE_CHARS=1400

# Application Configuration
SQL_DEBUG=false
DEBUG=true

# Working Directory
WORK_DIR=/tmp/repo-architect
