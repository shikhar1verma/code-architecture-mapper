# Environment Configuration Example
# Copy this file to .env and fill in your values

# Environment Type
ENV_TYPE=development

# Database Configuration
# For local development (uses Docker container)
DATABASE_URL=postgresql://postgres:postgres@postgres:5432/repo_architect

# For production (use your Supabase/external database URL)
# DATABASE_URL=postgresql://username:password@host:port/database_name

# Allowed hosts to backend (comma separated)
ALLOWED_HOSTS=http://localhost:3000,http://127.0.0.1:3000

# Frontend URL (for CORS and redirects)
FRONTEND_URL=http://localhost:3000

# LLM Configuration
GEMINI_API_KEY=your_gemini_api_key_here

# Analysis Configuration
TOP_FILES=40
COMPONENT_COUNT=8

# Application Configuration
SQL_DEBUG=false
DEBUG=true

# Working Directory
WORK_DIR=/tmp/repo-architect
